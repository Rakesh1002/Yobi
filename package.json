{
  "name": "yobi",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@yobi/trading-frontend --filter=@yobi/api-gateway --filter=@yobi/data-collector",
    "dev:frontend": "turbo run dev --filter=@yobi/trading-frontend",
    "dev:trading": "turbo run dev --filter=@yobi/trading-frontend --filter=@yobi/api-gateway",
    "dev:all": "turbo run dev",
    "dev:data-collector": "turbo run dev --filter=@yobi/data-collector",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=@yobi/database",
    "db:push": "turbo run db:push --filter=@yobi/database",
    "db:migrate": "turbo run db:migrate --filter=@yobi/database"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@repo/typescript-config": "workspace:*",
      "@repo/eslint-config": "workspace:*"
    }
  }
}
