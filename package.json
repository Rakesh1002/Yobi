{
  "name": "yobi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --ui=tui --parallel --no-cache --filter=@yobi/trading-frontend --filter=@yobi/api-gateway --filter=@yobi/data-collector --filter=@yobi/background-agent",
    "dev:trading": "turbo dev --filter=@yobi/trading-frontend --filter=@yobi/api-gateway --filter=@yobi/data-collector --filter=@yobi/background-agent",
    "dev:all": "turbo dev",
    "dev:frontend": "turbo dev --filter=@yobi/trading-frontend",
    "dev:api": "turbo dev --filter=@yobi/api-gateway",
    "dev:collector": "turbo dev --filter=@yobi/data-collector",
    "dev:agent": "turbo dev --filter=@yobi/background-agent",
    "start:frontend": "cd apps/trading-platform/frontend && pnpm dev",
    "start:api": "cd apps/trading-platform/api-gateway && pnpm dev",
    "start:collector": "cd apps/trading-platform/data-collector && pnpm dev",
    "start:agent": "cd apps/trading-platform/background-agent && pnpm dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:push": "cd packages/database && npx prisma db push",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:timescale:setup": "cd packages/database && node enable-timescale.js",
    "db:timescale:health": "cd packages/database && node check-timescale.js",
    "db:timescale:demo": "cd packages/database && node timescale-example.js"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "concurrently": "^8.2.2",
    "turbo": "^2.0.5",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "neonctl": "^2.12.0"
  }
}
